# =============================================================================
# ACOG API Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# IMPORTANT: Change this to a secure random string in production (min 32 chars)
SECRET_KEY=your-secret-key-at-least-32-characters-long-change-me

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 1 week

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Connection string format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://acog:acog_dev_password@localhost:5432/acog

# Individual components (used by Docker Compose)
POSTGRES_USER=acog
POSTGRES_PASSWORD=acog_dev_password
POSTGRES_DB=acog
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis (Celery broker and result backend)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Object Storage (MinIO/S3)
# -----------------------------------------------------------------------------
# For local development with MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=acog_minio
S3_SECRET_KEY=acog_minio_secret
S3_REGION=us-east-1
S3_BUCKET_ASSETS=acog-assets
S3_BUCKET_SCRIPTS=acog-scripts

# MinIO console ports
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=acog_minio
MINIO_ROOT_PASSWORD=acog_minio_secret

# For production AWS S3, comment out S3_ENDPOINT_URL and set:
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# API Service
# -----------------------------------------------------------------------------
API_PORT=8000

# CORS origins (JSON array format required by Pydantic)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# -----------------------------------------------------------------------------
# AI/LLM - OpenAI
# -----------------------------------------------------------------------------
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Model configuration
OPENAI_MODEL_PLANNING=gpt-4o
OPENAI_MODEL_SCRIPTING=gpt-4o-mini
OPENAI_MODEL_METADATA=gpt-4o-mini

# -----------------------------------------------------------------------------
# Voice Synthesis - ElevenLabs
# -----------------------------------------------------------------------------
# Get your API key from https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# -----------------------------------------------------------------------------
# Avatar Video - HeyGen
# -----------------------------------------------------------------------------
# Get your API key from https://www.heygen.com/
HEYGEN_API_KEY=your-heygen-api-key

# -----------------------------------------------------------------------------
# B-roll Generation - Runway
# -----------------------------------------------------------------------------
# Get your API key from https://runwayml.com/
RUNWAY_API_KEY=your-runway-api-key

# -----------------------------------------------------------------------------
# YouTube Publishing (Optional for Phase 1)
# -----------------------------------------------------------------------------
# OAuth credentials from Google Cloud Console
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, console
